<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lvtu.koala">

    <application
        android:name=".KoalaApplication"
        android:allowBackup="false"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Koala"
        tools:replace="android:allowBackup"
        tools:targetApi="n">
        <activity
            android:name=".ui.match.MatchDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.match.MatchHomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.add.FundActivity"
            android:exported="false" />
        <activity
            android:name=".ui.add.BankActivity"
            android:exported="false" />
        <activity
            android:name=".ui.add.AddActivity"
            android:exported="true" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>